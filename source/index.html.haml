!!! 5
%html
  %head
    %title Mr. Incredible Sound Pad
    %link{:href=>'stylesheets/app.css', :rel=>"stylesheet", :type=>"text/css"} 
    %script{:src=>'javascripts/jquery.min-1.7.1.js', :type => "text/javascript"}
    %script{:src=>'javascripts/app.js', :type => "text/javascript"}
  %body
    %ul#audios
      %h1 Sounds...
      - audio_web_paths do |name, sources|
        %li
          = name
          %a.play [play]
          %audio{:preload => 'auto'}
            - sources.each do |source|
              %source{:src => source}


